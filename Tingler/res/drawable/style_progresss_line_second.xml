<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
  <item android:id="@android:id/background">
    <shape>
      <corners android:radius="5dp" />
      <gradient
        android:angle="270"
        android:startColor="@color/lightGray"
        android:centerColor="@color/lightGray"
        android:centerY="0.5"
        android:endColor="@color/lightGray"
        />
    </shape>
  </item>
  <item android:id="@android:id/progress">
    <clip>
      <shape >
          
        <corners android:radius="5dp" />
          <gradient
            android:angle="0"
            android:endColor="@color/progressbar_progress_line_second_step"
             android:centerColor="@color/progressbar_progress_line_second_step"
            android:startColor="@color/progressbar_progress_line_second_step" />
      </shape>
    </clip>
  </item>
</layer-list>