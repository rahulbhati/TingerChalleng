<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include
        android:id="@+id/toolBar"
        layout="@layout/appbar" >
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/welcome_margin_top_bottom"
                android:background="@color/facebookColorBackground"
                android:padding="@dimen/btn_social_padding"
                android:text="@string/btn_fb"
                android:textAllCaps="false"
                android:textColor="@color/btnTxtColor" />

            <Button
                android:id="@+id/btn_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/welcome_margin_top"
                android:background="@color/googleColorBackground"
                android:padding="@dimen/btn_social_padding"
                android:text="@string/btn_google"
                android:textAllCaps="false"
                android:textColor="@color/btnTxtColor" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/welcome_margin_top"
                android:text="@string/signup_txt"
                android:textColor="@color/etxtColor" />

            <EditText
                android:id="@+id/etxt_mobile_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/welcome_margin_top"
                android:ems="10"
                android:hint="@string/etxt_mobile_hint"
                android:textColor="@color/etxtColor" >
            </EditText>

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/welcome_signup_bottom"
                android:layout_marginTop="@dimen/welcome_margin_top"
                android:background="@drawable/button_round"
                android:paddingBottom="@dimen/btn_padding_bottom"
                android:paddingLeft="@dimen/btn_padding_left"
                android:paddingRight="@dimen/btn_padding_right"
                android:paddingTop="@dimen/btn_padding_top"
                android:text="@string/btn_signup"
                android:textAllCaps="false" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/welcome_margin_top"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/txt_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/welcome_account_txt_top"
                android:text="@string/txt_account"
                android:textColor="@color/etxtColor" />

            <EditText
                android:id="@+id/etxt_mobile_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/welcome_margin_top"
                android:ems="10"
                android:hint="@string/etxt_mobile_hint"
                android:textColor="@color/etxtColor" />

            <EditText
                android:id="@+id/etxt_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/welcome_margin_top"
                android:ems="10"
                android:hint="@string/etxt_password_hint"
                android:textColor="@color/etxtColor" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/welcome_margin_top_bottom"
                android:layout_marginTop="@dimen/welcome_margin_top"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_round"
                    android:paddingBottom="@dimen/btn_padding_bottom"
                    android:paddingLeft="@dimen/btn_padding_left"
                    android:paddingRight="@dimen/btn_padding_right"
                    android:paddingTop="@dimen/btn_padding_top"
                    android:text="@string/btn_login"
                    android:textAllCaps="false" />

                   <Button
                       android:id="@+id/btn_forgot"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/button_round"
                       android:paddingBottom="@dimen/btn_padding_bottom"
                       android:paddingLeft="@dimen/btn_padding_left"
                       android:paddingRight="@dimen/btn_padding_right"
                       android:paddingTop="@dimen/btn_padding_top"
                       android:text="@string/btn_forgot"
                       android:textAllCaps="false" />

            </LinearLayout>
            <!-- </ScrollView> -->
        </LinearLayout>
    </ScrollView>

</LinearLayout>