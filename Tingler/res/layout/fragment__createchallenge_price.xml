<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/create_challenge_layout_margin_left"
        android:paddingRight="@dimen/create_challenge_layout_margin_right" >

        <ImageView
            android:id="@+id/imv_level"
            android:layout_width="@dimen/icon_step_level_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/step_fourth" />

        <ImageView
            android:id="@+id/icon_prize"
            android:layout_width="@dimen/shield_width"
            android:layout_height="@dimen/shield_height"
            android:src="@drawable/price_icon" />

        <EditText
            android:id="@+id/etxt_price_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:background="@drawable/etxt_border"
            android:ems="10"
            android:hint="Custom challenge prize type here"
            android:lines="3"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txt_pay_with"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="Or play with challenge app icons" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/etxt_coins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/etxt_border"
                android:drawableLeft="@drawable/prize_coins"
                android:ems="10"
                android:hint="Minimum 500 coins"
                android:inputType="phone"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/create_challenge_btn_margin_bottom"
            android:paddingTop="@dimen/create_challenge_btn_margin_bottom" >

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginRight="@dimen/create_challenge_btn_margin_bottom"
                android:background="@drawable/btn_primary"
                android:paddingLeft="@dimen/btn_paddding_left"
                android:paddingRight="@dimen/btn_paddding_right"
                android:text="BACK"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@drawable/btn_primary"
                android:paddingLeft="@dimen/btn_paddding_left"
                android:paddingRight="@dimen/btn_paddding_right"
                android:text="NEXT"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>