<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/challengee_layout_margin_left"
    android:layout_marginRight="@dimen/challengee_layout_margin_right"
    android:layout_marginTop="@dimen/challengee_layout_margin_top"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lv_witness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/challengee_lv_divider_height" >
        </ListView>
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_height"
        android:layout_below="@+id/layout"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/welcome_signup_bottom"
        android:layout_marginTop="@dimen/welcome_margin_top"
        android:background="@drawable/btn_primary"
        android:paddingLeft="@dimen/btn_paddding_left"
        android:paddingRight="@dimen/btn_paddding_right"
        android:text="NEXT"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

</LinearLayout>