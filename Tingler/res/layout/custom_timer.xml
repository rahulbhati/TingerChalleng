<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/etxt_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/timer_txt_margin"
            android:background="@drawable/etxt_border"
            android:ems="3"
            android:gravity="center"
            android:hint="000"
            android:inputType="phone"
            android:maxLength="3"
            android:textColor="@android:color/black"
            android:textSize="@dimen/timer_txt_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAYS" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/etxt_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/timer_txt_margin"
            android:background="@drawable/etxt_border"
            android:ems="2"
            android:gravity="center"
            android:hint="00"
            android:inputType="phone"
            android:maxLength="2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/timer_txt_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOURS" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/etxt_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/timer_txt_margin"
            android:background="@drawable/etxt_border"
            android:ems="2"
            android:gravity="center"
            android:hint="00"
            android:inputType="phone"
            android:maxLength="2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/timer_txt_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MINUTES" />
    </LinearLayout>

</LinearLayout>