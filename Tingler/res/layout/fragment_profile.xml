<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryBackground"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:background="@drawable/edit_border"
                android:padding="3dp"
                android:text="  Edit  "
                android:textColor="@color/primaryColor" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Level  "
            android:textColor="@color/primaryColor" />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/gold_level_shield"
            android:gravity="center" >

            <TextView
                android:id="@+id/txt_level_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/levelTxtColor"
                android:textSize="@dimen/levelTxtColor" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_profile_level_loader_bg" >

            <ProgressBar
                android:id="@+id/progressbar_profileLevel"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/style_circular_fill"
                android:secondaryProgress="10" />

            <ImageView
                android:layout_width="@dimen/profile_picture_width"
                android:layout_height="@dimen/profile_picture_height"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/profile_img"
                android:src="@drawable/icon_profile" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/profile_un_txt_margin_bottom"
            android:layout_marginTop="@dimen/profile_un_txt_margin_top"
            android:text="Carol Thomas"
            android:textColor="@color/primaryColor"
            android:textSize="@dimen/profile_un_txt_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/divider_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/primaryBackground"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/coin_width"
                android:layout_height="@dimen/coin_height"
                android:src="@drawable/icon_coins" />

            <TextView
                android:id="@+id/txt_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/profile_un_txt_margin_bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/profile_un_txt_margin_top"
                android:text="1000"
                android:textColor="@android:color/white"
                android:textSize="@dimen/profile_coins_txt_size" />

            <TextView
                android:id="@+id/txt_coins_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/profile_un_txt_margin_bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/profile_un_txt_margin_top"
                android:text="Coins"
                android:textColor="@android:color/white"
                android:textSize="@dimen/profile_coins_txt_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/divider_color" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/profile_un_txt_margin_bottom"
            android:layout_marginTop="@dimen/profile_un_txt_margin_top"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Lorem Ipsum is simply dummy text of the printing"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="@dimen/profile_status_txt_size" />

        <Button
            android:id="@+id/btn_challenge"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/profile_btn_margin_bottom"
            android:layout_marginTop="@dimen/welcome_margin_top"
            android:background="@drawable/btn_primary"
            android:paddingLeft="@dimen/btn_paddding_left"
            android:paddingRight="@dimen/btn_paddding_right"
            android:text="CREATE CHALLENGE"
            android:textAllCaps="false" />
    </LinearLayout>

</ScrollView>