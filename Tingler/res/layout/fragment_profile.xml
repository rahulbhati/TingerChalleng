<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackground"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txt_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:background="@android:color/black"
            android:padding="3dp"
            android:text="  Edit  "
            android:textColor="@color/primaryColor" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Level  "
        android:textColor="@color/primaryColor" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/star"
        android:gravity="center" >

        <TextView
            android:id="@+id/txt_level_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/levelTxtColor"
            android:textSize="@dimen/levelTxtColor" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/profile_un_txt_margin_bottom"
        android:layout_marginTop="@dimen/profile_un_txt_margin_top"
        android:text="Carol Thomas"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/profile_un_txt_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/primaryBackground"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/txt_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/profile_un_txt_margin_bottom"
            android:layout_marginTop="@dimen/profile_un_txt_margin_top"
            android:text="1000"
            android:textColor="@android:color/white"
            android:textSize="@dimen/profile_coins_txt_size" />

        <TextView
            android:id="@+id/txt_coins_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/profile_un_txt_margin_bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/profile_un_txt_margin_top"
            android:text="Coins"
            android:textColor="@android:color/white"
            android:textSize="@dimen/profile_coins_txt_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/profile_un_txt_margin_bottom"
        android:layout_marginTop="@dimen/profile_un_txt_margin_top"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Lorem Ipsum is simply dummy text of the printing"
        android:textColor="@android:color/white"
        android:textSize="@dimen/profile_status_txt_size" />

    <Button
        android:id="@+id/btn_chllenge"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_height"
        android:layout_marginBottom="@dimen/welcome_signup_bottom"
        android:layout_marginTop="@dimen/welcome_margin_top"
        android:background="@drawable/button_round"
        android:paddingBottom="@dimen/btn_padding_bottom"
        android:paddingTop="@dimen/btn_padding_top"
        android:text="       CREATE CHALLENGE       "
        android:textAllCaps="false" />

</LinearLayout>