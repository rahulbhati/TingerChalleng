<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btn_account_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
          android:background="@drawable/button_round"
        android:text="         ACTIVE ACCOUNT         " />

    <EditText
        android:id="@+id/etxtz_fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_account_active"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:ems="10"
         android:textColor="@android:color/black"
        android:hint="@string/etxt_otp_hint" >

       
    </EditText>

    <TextView
        android:id="@+id/txt_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etxtz_fname"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:textColor="@android:color/black"
        android:text="@string/txt_otp" />

     <include
            android:id="@+id/error"
            layout="@layout/error"></include>

</RelativeLayout>