<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_add_challengee"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bottle_green_color"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imv_icon"
        android:layout_width="@dimen/challengee_picture_width"
        android:layout_height="@dimen/challengee_picture_width"
      
        android:src="@drawable/icon_profile" />

    <ImageView
        android:id="@+id/imv_cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/darkBlue"
        android:padding="10dp"
        android:src="@drawable/green_circle" />

    <ImageView
        android:id="@+id/imv_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imv_cross"
        android:padding="10dp"
        android:src="@drawable/green_circle" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imv_circle"
        android:layout_alignLeft="@+id/txt_mobile"
        android:text="Rahul Bhati"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/profile_un_txt_size" />

    <TextView
        android:id="@+id/txt_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name"
        android:layout_toRightOf="@+id/imv_icon"
        android:text="Challengee"
        android:textColor="@android:color/white" />

</RelativeLayout>