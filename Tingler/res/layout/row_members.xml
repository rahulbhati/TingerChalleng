<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_add_challengee"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
   
    android:paddingBottom="10dp" >

    <LinearLayout
         android:background="@drawable/border_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imv_icon"
                android:layout_width="@dimen/challengee_picture_width"
                android:layout_height="@dimen/challengee_picture_width"
                android:src="@drawable/icon_profile" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.36"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Rahul Bhati Rahul Bhati "
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/profile_un_txt_size" />

            <TextView
                android:id="@+id/txt_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Challengee"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imv_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/green_circle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/darkBlue"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imv_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               
                android:src="@drawable/ic_action_remove" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>