<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly_add_challengee"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/ly_add_challenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

       <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/imv_icon"
            android:layout_width="@dimen/challengee_picture_width"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.10"
            ></com.android.volley.toolbox.NetworkImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

          

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Challenge to create school name as AIB "
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Challengee"
                android:textColor="@color/darkGray"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imv_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:src="@drawable/ic_action_next_item" />
    </LinearLayout>

    <ProgressBar
                android:id="@+id/progressbar_profileLevel"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:progressDrawable="@drawable/style_progresss_line_first"
               />

</LinearLayout>