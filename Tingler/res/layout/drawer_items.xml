<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColorDark" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/drawer_layout_margin_top_bottom"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageview_profile"
                android:layout_width="@dimen/profile_picture_width"
                android:layout_height="@dimen/profile_picture_height"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle_border"
                android:src="@drawable/icon_profile" />

            <Button
                android:id="@+id/btn_createchallenge1"
                android:layout_width="wrap_content"
                 android:layout_height="@dimen/btn_height"
                android:layout_marginBottom="@dimen/drawer_btn_maring_top_bottom"
                android:layout_marginTop="@dimen/drawer_btn_maring_top_bottom"
                android:background="@drawable/btn_drawer"
                android:paddingLeft="@dimen/btn_paddding_left"
                android:paddingRight="@dimen/btn_paddding_right"
                android:textColor="@android:color/white"
                android:text="CREATE CHALLENGE" />

            <TextView
                android:id="@+id/txt_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/itme_one"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/drawer_txt_maring_top_bottom"
                android:paddingTop="@dimen/drawer_txt_maring_top_bottom"
                android:text="Profile"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txt_dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/drawer_txt_maring_top_bottom"
                android:paddingTop="@dimen/drawer_txt_maring_top_bottom"
                android:text="Dashboard"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txt_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/itme_one"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/drawer_txt_maring_top_bottom"
                android:paddingTop="@dimen/drawer_txt_maring_top_bottom"
                android:text="Notification"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txt_helpcenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/drawer_txt_maring_top_bottom"
                android:paddingTop="@dimen/drawer_txt_maring_top_bottom"
                android:text="Help Center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txt_aboutus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/itme_one"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/drawer_txt_maring_top_bottom"
                android:paddingTop="@dimen/drawer_txt_maring_top_bottom"
                android:text="About us"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txt_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/drawer_layout_margin_top_bottom"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/drawer_txt_maring_top_bottom"
                android:paddingTop="@dimen/drawer_txt_maring_top_bottom"
                android:text="Update"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/etxt_setting"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/drawer_txt_maring_top_bottom"
                android:paddingTop="@dimen/drawer_txt_maring_top_bottom"
                android:src="@drawable/action_menu" />

            <TextView
                android:id="@+id/txt_signout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/drawer_layout_margin_top_bottom"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/drawer_txt_maring_top_bottom"
                android:paddingTop="@dimen/drawer_txt_maring_top_bottom"
                android:text="SIGN OUT"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>