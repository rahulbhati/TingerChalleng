<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white" >

        <LinearLayout
            android:id="@+id/timerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bottle_green_color"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/txt_challengename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="Challenge text will be here"
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/profile_un_txt_size" />

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Remaining Time"
                android:textColor="@android:color/white"
                android:textSize="@dimen/profile_un_txt_size" />

            <include
                android:id="@+id/timerTool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                layout="@layout/running_timer" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/arrowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timerLayout"
            android:gravity="center_horizontal"
            android:orientation="vertical" >
  
            <ImageView
                android:id="@+id/imv_uparrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_half"
                android:padding="2dp"
                android:src="@drawable/icon_uparrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/arrowLayout"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/txt_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="You got request as a challengee"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/profile_un_txt_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/create_challenge_btn_margin_bottom"
                android:paddingTop="@dimen/create_challenge_btn_margin_bottom" >

                <Button
                    android:id="@+id/btn_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_height"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginRight="@dimen/create_challenge_btn_margin_bottom"
                    android:background="@drawable/btn_primary"
                    android:paddingLeft="@dimen/btn_paddding_left"
                    android:paddingRight="@dimen/btn_paddding_right"
                    android:text="ACCEPT"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_reject"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_height"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="@drawable/btn_reject"
                    android:paddingLeft="@dimen/btn_paddding_left"
                    android:paddingRight="@dimen/btn_paddding_right"
                    android:text="REJECT"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>